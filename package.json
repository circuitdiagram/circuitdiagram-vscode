{
    "name": "circuitdiagram-vscode",
    "displayName": "Circuit Diagram",
    "description": "Circuit Diagram component editor for VS Code.",
    "version": "0.3.0-dev",
    "publisher": "CircuitDiagram",
    "homepage": "http://www.circuit-diagram.org/",
    "repository": {
        "type": "git",
        "url": "https://github.com/circuitdiagram/circuitdiagram-vscode.git"
    },
    "license": "GPLv2",
    "icon": "assets/logo256.png",
    "engines": {
        "vscode": "^1.2.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:circuitDiagram.renderPreview"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "circuitDiagram.renderPreview",
            "title": "Render Component Preview",
            "icon": {
                "light": "./assets/logo16.png",
                "dark": "./assets/logo16.png"
            }
        }],
        "menus": {
			"editor/title": [
				{
					"command": "circuitDiagram.renderPreview",
                    "when": "resourceLangId == xml",
                    "group": "navigation"
				}
			]
        },
        "configuration": {
            "title": "Circuit Diagram",
            "properties": {
                "circuitDiagram.executablePath": {
                    "type": "string",
                    "default": null,
                    "description": "Path to Circuit Diagram command-line executable."
                },
                "circuitDiagram.debugLayout": {
                    "type": "boolean",
                    "default": false,
                    "description": "Render component layout information (shown in blue)."
                },
                "circuitDiagram.executableCommand": {
                    "type": "array",
                    "default": [ "render" ],
                    "description": "Command to pass to the command line executable."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "lint": "tslint -c tslint.json 'src/**/*.ts'"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}